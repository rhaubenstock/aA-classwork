<h1><%= @album.title %></h1>

<a href=<%= band_url(@album.band_id) %>><%= @album.band.name %></a> 
<a href=<%= edit_album_url(@album) %>>Edit Album</a>

<form action=<%= album_url %> method="post">
    <input type="hidden" name="_method" value="delete">
    <input type="hidden" name="authenticity_token" value=<%= form_authenticity_token %>>

    <input type="submit" value="Delete Album">
</form>


<ul>
    <% @album.tracks.each do |track| %>
        <a href=<%= track_url(track) %>><%= track.title %></a>
    <% end %>
</ul>

<a href=<%= new_album_track_url(@album) %>>Add Track</a>