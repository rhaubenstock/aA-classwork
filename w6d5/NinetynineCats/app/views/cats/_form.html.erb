<% if type == :new %>
  <% action_url = cats_url %>
  <% button_text = "Create cat" %>
<% else %>
  <% action_url = cat_url(cat.id) %>
  <% button_text = "Update cat" %>
<% end %>

<form action="<%= action_url %>" method="POST">
  <% if type == :edit %>
    <input type="hidden" name="_method" value="PATCH">
  <% end %>
  
  <label> Name:
    <input type="text" name="cat[name]" value="<%= cat.name %>">
  </label>
  <br>

  <label> Birth Date:
    <input type="date" name="cat[birth_date]" value="<%= cat.birth_date %>">
  </label>
  <br>

  <label> Color:
    <select name="cat[color]">
      <option disabled <%= cat.color.nil? ? "selected" : "" %>>-- Select Color --</option>
      <option value="orange" <%= cat.color=="orange" ? "selected" : "" %>>Orange</option>
      <option value="black" <%= cat.color=="black" ? "selected" : "" %>>Black</option>
      <option value="brown" <%= cat.color=="brown" ? "selected" : "" %>>Brown</option>
      <option value="white" <%= cat.color=="white" ? "selected" : "" %>>White</option>
    </select>
  </label>
  <br>

  <label> Sex:
    <input type="radio" id="M" name="cat[sex]" value="M" <%= cat.sex == "M" ? "checked" : "" %>>
    <label for="M">M</label>
    <input type="radio" id="F" name="cat[sex]" value="F" <%= cat.sex == "F" ? "checked" : "" %>>
    <label for="F">F</label>
  </label>
  <br>

  <label> Description:
    <textarea name="cat[description]"><%= cat.description%></textarea>
  </label>
  
  <input type="submit" value="<%= button_text%>">
</form>